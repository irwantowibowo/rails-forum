#post_content
	%h1= @post.title
	%p= @post.content

	#comments
		%h2= @post.comments.count
		= render @post.comments

		%h3 Balas Thread Ini
		= render "comments/form"

	%br/
	%hr/
	%br/

	= link_to "Edit Thread", edit_post_path(@post), class: 'button'
	= link_to "Hapus Thread", post_path(@post), method: :delete, data: {confirm: 'Yakin Mau Manghapus??'}, class: 'button'